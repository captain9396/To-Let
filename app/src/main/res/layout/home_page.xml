<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
            android:id="@+id/postAdButton"
            android:layout_width="213dp"
            android:layout_height="78dp"
            android:text="Post AD"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="223dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/huntHomeButton"
        android:layout_alignStart="@+id/huntHomeButton" />

        <Button
            android:id="@+id/manageAdsButton"
            android:layout_width="213dp"
            android:layout_height="78dp"
            android:text="manage ads"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="301dp"
            android:layout_below="@+id/huntHomeButton"
            android:layout_alignLeft="@+id/huntHomeButton"
            android:layout_alignStart="@+id/huntHomeButton" />

    <Button
        android:id="@+id/huntHomeButton"
        android:layout_width="213dp"
        android:layout_height="78dp"
        android:text="hunt home"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="145dp"
        android:layout_below="@+id/postAdButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="213dp"
        android:layout_height="78dp"
        android:layout_alignLeft="@+id/manageAdsButton"
        android:layout_alignStart="@+id/manageAdsButton"
        android:layout_below="@+id/manageAdsButton"
        android:text="log out"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/account" />

</RelativeLayout>